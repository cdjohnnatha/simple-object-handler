{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "describe": true,
      "expect": true,
      "should": true,
      "done": true,
      "DataTypes": true,
      "before": true,
      "after": true,
      "it": true,
      "isNaN": true,
      "beforeEach": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "camelcase": [ 0, { "properties": "always" } ],
      "no-underscore-dangle": "off",
      "prettier/prettier": ["error"]
    }
  }